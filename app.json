{
    "name": "Github mirror tool",
    "description": "Mirroring Github --> Gitlab, Bitbucket, Gitea.",
    "keywords": [
      "git",
      "github",
      "gitlab",
      "bitbucket",
      "gitea",
      "mirror",
      "heroku"
    ],
    "website": "https://github.com/inbalboa/github2mirror",
    "repository": "https://github.com/inbalboa/github2mirror",
    "env": {
      "GIT_USER": {
        "description": "Username (must be the same on Github and others)."
      },
      "GITHUB_TOKEN": {
        "description": "Github access token https://github.com/settings/tokens."
      },
      "GITLAB_TOKEN": {
        "description": "Gitlab access token https://gitlab.com/profile/personal_access_tokens.",
		"required": false
      },
      "BITBUCKET_TOKEN": {
        "description": "Bitbucket access token https://bitbucket.org/account/user/USERUID/app-passwords.",
		"required": false
      },
      "GITEA_TOKEN": {
        "description": "Gitea access token https://gitea.com/user/settings/applications.",
		"required": false
      },
    },
    "formation": {
      "worker": {
        "quantity": 1,
        "size": "free"
      }
    },
    "buildpacks": [
      {
        "url": "https://github.com/chrismytton/heroku-buildpack-jq"
      }
    ]
  }
