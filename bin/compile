#!/usr/bin/env bash

set -e

BUILD_DIR=$1
PROFILE_DIR="$BUILD_DIR/.profile.d"
VENDOR_BIN_DIR="vendor/bin"

JQ_URL=https://github.com/stedolan/jq/releases/download/jq-1.6/jq-linux64

mkdir -p "$PROFILE_DIR" "$BUILD_DIR/$VENDOR_BIN_DIR"
printf "export PATH=\$PATH:/app/$VENDOR_BIN_DIR" > "$PROFILE_DIR/jq.sh"

curl -fsSL "$JQ_URL" -o "$BUILD_DIR/$VENDOR_BIN_DIR/jq"
chmod +x "$BUILD_DIR/$VENDOR_BIN_DIR/jq"
printf "PATH: $PATH"
printf "jq location: $(which jq)"
