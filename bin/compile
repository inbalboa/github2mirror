#!/usr/bin/env bash

set -e

BUILD_DIR=$1
echo "$1"
echo "$2"
echo "$3"

JQ_URL=https://github.com/stedolan/jq/releases/download/jq-1.6/jq-linux64

BIN_DIR="/app/vendor/bin"
mkdir -p "$BIN_DIR"
export PATH=$PATH:$BIN_DIR
echo $PATH
curl -fsSL "$JQ_URL" -o "$BIN_DIR/jq"
chmod +x "$BIN_DIR/jq"
which jq
sleep 30
